generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  slug     String    @id
  title    String    @unique
  projects Project[]
}

model Tag {
  slug     String    @id
  title    String
  projects Project[]
}

model Project {
  slug         String   @id
  title        String
  summary      String
  imageUrl     String
  category     Category @relation(fields: [categorySlug], references: [slug])
  categorySlug String
  tags         Tag[]
  updated      DateTime @updatedAt
}
